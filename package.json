{
  "name": "cryptodash-production",
  "version": "1.0.0",
  "description": "CryptoDash Production Deployment",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && NODE_ENV=production node server.js",
    "dev": "cd backend && nodemon server.js",
    "install-backend": "cd backend && npm install",
    "build": "npm run install-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs cryptodash"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express-session": "^1.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "speakeasy": "^2.0.0",
    "stripe": "^18.4.0",
    "winston": "^3.10.0",
    "ws": "^8.18.3"
  }
}
