# Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize the values

# Required Variables
key_pair_name = "your-ec2-key-pair-name"
domain_name   = "your-domain.com"

# Optional Variables (with defaults)
project_name  = "cryptodash"
environment   = "production"
aws_region    = "us-east-1"
instance_type = "t3.medium"

# Security Configuration
allowed_cidr_blocks = [
  "0.0.0.0/0"  # Allow from anywhere - restrict this in production
]

# Example for restricting access to specific IP ranges:
# allowed_cidr_blocks = [
#   "203.0.113.0/24",    # Your office network
#   "198.51.100.0/24"    # Your home network
# ]
